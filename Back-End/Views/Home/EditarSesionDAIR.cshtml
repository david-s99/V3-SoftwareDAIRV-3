@using System.Data
@model Back_End.Models.FormEditarDetallesSesionAIR
@{
    Layout = null;
    ViewBag.Title = "EditarSesionAIR";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Software DAIR</title>
    <link rel="stylesheet" href="~/styles/sesiones.css">
    <link rel="shortcut icon" href="~/src/logo.png">
    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="ext/fa/css/all.min.css">
    <!-- JavaScript requerido -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
            crossorigin="anonymous"></script>
</head>
<header>
    <nav class="navbar">
        <div class="container-fluid">
            <h5 class="navbar--tittle"> Editar sesión DAIR</h5>
            <a href="./login.html" class="navbar--button">
                <h5 href="./login.html" class="navbar--cerrar--sesion"> Cerrar sesión </h5>
                <img class="navbar--icon" src="~/src/salir.png" alt="Salir">
            </a>
        </div>
    </nav>
</header>

<body>
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="search--container">
            @using (Html.BeginForm($"EnviarEdicionSesionDAIR/{ViewBag.ID}", "Home", FormMethod.Post))
            {
                <form class="needs-validation" style="top: 50%; left: 50%;" novalidate>

                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationTooltip03">Nombre del Evento: </label>
                            @Html.TextBoxFor(model => model.Nombre, new { placeholder = ViewBag.NombreSesionAIR, @class = "form-input" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Fecha Sesión: </label>
                            @Html.TextBoxFor(model => model.Fecha, new
                       {
                           @class = "form-control",
                           type = "date"
                       })
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Hora Inicio: </label>
                            @Html.TextBoxFor(model => model.TiempoInicial, new
                       {
                           @class = "form-control",
                           type = "time"
                       })
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Hora Fin: </label>
                            @Html.TextBoxFor(model => model.TiempoFinal, new
                       {
                           @class = "form-control",
                           type = "time"
                       })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationTooltip03">Descripción: </label>
                            @Html.TextBoxFor(model => model.Descripcion, new
                        {
                           @class = "form-control",
                           type = "text"
                       })
                            <label for="validationTooltip03">Link de Carpeta: </label>
                            @Html.TextBoxFor(model => model.PathArchivo, new
                       {
                           placeholder = ViewBag.LinkAIR,
                           @class = "form-control",
                           type = "text"
                       })
                            <label for="validationTooltip03">Padrón: </label>
                            @Html.TextBoxFor(model => model.Fecha, new
                       {
                           @class = "form-control",
                           type = "file"
                       })
                        </div>
                    </div>

                    <div class="container--header">
                        @Html.ActionLink("Volver", "SesionesDAIR", new { @class = "btn btn-outline-secondary" })
                        <button class="btn btn-outline-secondary" type="submit">Guardar</button>
                    </div>

                </form>
            }
        </div>
        <div class="table--container">

        </div>
        <div class="footer--container">
        </div>
</body>

</html>